    <div class="site-wrapper">

      <div class="site-wrapper-inner">

        <div class="cover-container">
<br></br>
<div class="inner cover">
<div align="left" class="container">

    <div class="site-wrapper">
      <div class="site-wrapper-inner">
      </p>
      <div class="alert alert-success" id="installing">
        Installing <%= app_title %>...
      </div>
        <div style="float:right;" class="well">
          <div class="media">
            <a class="pull-left" href="#">
              <img class="media-object" src="<%= "../img/#{app_name}.png" %>"></img>
            </a>
            <div class="media-body">
              <br>
              <div class="media-heading"><button class="btn btn-info" id="install"><i class="icon-download icon-white"></i> Install App</button></div>
              <small><kbd><%= app_title %><br>
                Version <%= app_version %></kbd></small>
            </div>
          </div>
        </div>
      <h1 class="cover-heading">
        <%= app_title %>
      </h1>
      <p class="lead">
        <%= app_tags %>
      </p>
      <h3>
        Description
      </h3>
      <p align="left">
        <%= app_description %>
      </p>
      <h3>Details</h3>
      <table class="table table-condensed">
        <tr class="success">
          <th>
            Name
          </th>
          <th>
            Description
          </th>
          <th>
            Mandatory
          </th>
        </tr>
        <% for param in app_parameters %>
          <tr>
            <td align="center">
              <%= param["name"] %>
            </td>
            <td align="center">
              <%= param["description"] %>
            </td>
            <td align="center">
              <%= param["mandatory"] || false %>
            </td>
          </tr>
         <% end %>
      </table>

      <h3>Console</h3>
      </p>
        <pre>
          cd app_store/apps;
          bin/gooddata -Ulogin -Ppass -p PROJECT_PID run_ruby --dir <%= app_name %> --params <%= app_name %>/params.json --name\"<%= app_title %>\" --remote
        </pre>
    </div>
  </div>
</div>
</div>
</div>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
    <script src="../js/bootstrap.min.js"></script>
       <script type="text/javascript">
        $(function(){
          $("div#installing").hide();
            $("#install").on("click", function(){
              $("#install").text('Installing...').attr("disabled", true);
              $("div#installing").show(500);
              setTimeout(function() {
                $("div#installing").text('Deploying application...');
                setTimeout(function()  {
                  $("div#installing").text('Deploying application...success.');
                  $("#install").text('Installed');
                  $("div#installing").hide(500);
                },1000);
              }, 2500);
          });
        });
        </script>
    <script src="../js/docs.min.js"></script>
  </body>
